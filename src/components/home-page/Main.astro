---
// No need for hooks in Astro components
---

<section class="hero-section bg-primary">
    <div class="container">
        <div class="hero-content text-center">
            <h1 class="mb-md ">Faculty of Computing <span class="text-gradient">Student Community</span></h1>
            <p class="text-secondary mb-xl">Empowering computing students to excel academically, professionally, and socially</p>
            <div class="button-group">
                <a href="/join" class="btn-primary hover-glow">Join FCSC</a>
                <a href="/about" class="btn-secondary cyan-glow">Learn More</a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Only add minimal styling that's not in global.css */
    .hero-section {
        min-height: 80vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
    }
    
    /* Add subtle particle effect background */
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: radial-gradient(var(--color-accent-primary-gradient) 1px, transparent 1px);
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: 0;
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .button-group {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }
    
    h1 {
        font-size: 3.5rem;
        line-height: 1.1;
    }
    
    p {
        font-size: 1.5rem;
    }
    
    @media (max-width: 768px) {
        .button-group {
            flex-direction: column;
            gap: var(--space-sm);
        }
    }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 0.5rem;
        background-color: var(--color-accent-primary);
        color: var(--color-text-primary);
        border: none;
        transition: all var(--transition-normal);
    }

    .btn-primary:hover {
        background-color: var(--color-accent-primary-gradient);
        box-shadow: var(--shadow-glow-blue);
    }

    .btn-secondary {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 0.5rem;
        border: 2px solid var(--color-accent-secondary-cyan);
        color: var(--color-accent-secondary-cyan);
        background: transparent;
        transition: all var(--transition-normal);
    }

    .btn-secondary:hover {
        background-color: rgba(0, 255, 240, 0.1);
        box-shadow: var(--shadow-glow-cyan);
        color: var(--color-text-primary);
        transform: translateY(-2px);
        transition: all var(--transition-normal);
    }
    
</style>
