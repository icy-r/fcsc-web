---
// Import any necessary data
import { fetchContent } from '@services/fetch-content';

// Get current year for copyright
const currentYear = new Date().getFullYear();

// Social media links
const socialLinks = [
  { name: 'Facebook', url: 'https://facebook.com/fcsc', icon: 'facebook' },
  { name: 'Instagram', url: 'https://instagram.com/fcsc', icon: 'instagram' },
  { name: 'LinkedIn', url: 'https://linkedin.com/company/fcsc', icon: 'linkedin' },
  { name: 'GitHub', url: 'https://github.com/fcsc', icon: 'github' },
];

// Quick links
const quickLinks = [
  { name: 'About Us', url: '/about' },
  { name: 'Events', url: '/events' },
  { name: 'Resources', url: '/resources' },
  { name: 'Contact', url: '/contact' },
];
---

<footer class="bg-secondary py-xl mt-xl">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <img src="/content/fcsc.png" alt="FCSC Logo" class="footer-logo" />
        <p class="text-secondary mt-md mb-lg">Empowering computing students to excel academically, professionally, and socially.</p>
        <div class="social-links">
          {socialLinks.map(link => (
            <a href={link.url} class="social-icon hover-glow" aria-label={link.name} target="_blank" rel="noopener">
              <span class="sr-only">{link.name}</span>
              <i class={`icon-${link.icon}`}></i>
            </a>
          ))}
        </div>
      </div>
      
      <div class="footer-links">
        <div class="link-group">
          <h4 class="mb-md">Quick Links</h4>
          <ul>
            {quickLinks.map(link => (
              <li>
                <a href={link.url} class="footer-link">{link.name}</a>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="link-group">
          <h4 class="mb-md">Contact Us</h4>
          <address>
            <p>Sri Lanka Institute of Information Technology</p>
            <p>Email: <a href="mailto:fcsc@my.sliit.lk" class="text-cyan">fcsc@my.sliit.lk</a></p>
          </address>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Faculty of Computing Student Community. All rights reserved.</p>
      <p>Designed with <span class="text-magenta">â™¥</span> by FCSC Web Team</p>
    </div>
  </div>
</footer>

<style>
  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .footer-logo {
    width: 150px;
    height: auto;
    margin-bottom: var(--space-md);
  }
  
  .social-links {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-md);
  }
  
  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    background-color: rgba(255, 255, 255, 0.1);
    color: var(--color-text-primary);
    transition: all var(--transition-normal);
  }
  
  .social-icon:hover {
    background-color: var(--color-accent-primary);
    transform: translateY(-3px);
  }
  
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-xl);
  }
  
  .link-group h4 {
    color: var(--color-text-primary);
    font-size: 1.2rem;
    position: relative;
  }
  
  .link-group h4::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, var(--color-accent-primary), var(--color-accent-primary-gradient));
  }
  
  .link-group ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .link-group li {
    margin-bottom: var(--space-sm);
  }
  
  .footer-link {
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
    display: inline-block;
  }
  
  .footer-link:hover {
    color: var(--color-accent-primary);
    transform: translateX(3px);
  }
  
  address {
    font-style: normal;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-lg);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }
  
  /* Responsive styles */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: var(--space-xs);
      text-align: center;
    }
  }
</style>