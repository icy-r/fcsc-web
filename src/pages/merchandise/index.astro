---
import Layout from '@layouts/Layout.astro';

//import data from merchandise.md
import {fetchContent} from '@services/fetch-content';

// Fetch the merchandise content as structured data
const merchandiseData = await fetchContent('merchandise', 'data');

// Define merchandise item type
type MerchandiseItem = {
  name: string;
  price: string;
  link: string;
  image: string;
  description: string;
  largeBanner: string | boolean;
};

// Get all merchandise items
const allMerchandise = (merchandiseData.merchandise || []) as MerchandiseItem[];

// Filter items based on largeBanner property - now comparing with string "true"
const featuredItems = allMerchandise.filter((item: MerchandiseItem) => 
  item.largeBanner === "true" || item.largeBanner === true
);

const regularItems = allMerchandise.filter((item: MerchandiseItem) => 
  item.largeBanner !== "true" && item.largeBanner !== true
);

// Page title and metadata
const pageTitle = "Merchandise | FCSC";

//update page title
Astro.props.pageTitle = pageTitle;
---

<Layout pageTitle={pageTitle}>
    <div class="container">
        <h1 class="page-title text-gradient">Featured Merchandise</h1>
        
        {/* Featured items with large banner */}
        <div class="featured-merchandise">
            {featuredItems.map((item: MerchandiseItem) => (
                <div class="featured-item glass-card hover-glow">
                    <div class="featured-image">
                        <img src={item.image} alt={item.name} />
                    </div>
                    <div class="featured-content">
                        <h2>{item.name}</h2>
                        <p class="description">{item.description}</p>
                        <p class="price">{item.price}</p>
                        <a href={item.link} class="buy-btn cyan-glow">Buy Now</a>
                    </div>
                </div>
            ))}
        </div>
        
        <h2 class="section-title">Other Merchandise</h2>
        
        {/* Regular items in grid layout */}
        <div class="merchandise-grid">
            {regularItems.map((item: MerchandiseItem) => (
                <div class="merchandise-item glass-card hover-glow">
                    <img src={item.image} alt={item.name} />
                    <h3>{item.name}</h3>
                    <p class="description">{item.description}</p>
                    <p class="price">{item.price}</p>
                    <a href={item.link} class="buy-btn magenta-glow">Buy Now</a>
                </div>
            ))}
        </div>
    </div>
</Layout>

<style>
    /* Merchandise page specific styles */
    .page-title {
        text-align: center;
        margin-bottom: var(--space-2xl);
    }
    
    .section-title {
        margin: var(--space-2xl) 0 var(--space-lg);
    }
    
    /* Featured item styles */
    .featured-merchandise {
        margin-bottom: var(--space-2xl);
    }
    
    .featured-item {
        display: flex;
        flex-direction: column;
        overflow: hidden;
        margin-bottom: var(--space-xl);
        padding: var(--space-md);
    }
    
    @media (min-width: 768px) {
        .featured-item {
            flex-direction: row;
            align-items: center;
        }
    }
    
    .featured-image {
        flex: 1;
        border-radius: var(--radius-sm);
        overflow: hidden;
    }
    
    .featured-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform var(--transition-normal);
    }
    
    .featured-item:hover .featured-image img {
        transform: scale(1.05);
    }
    
    .featured-content {
        flex: 1;
        padding: var(--space-lg);
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    /* Regular merchandise grid */
    .merchandise-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: var(--space-xl);
    }
    
    .merchandise-item {
        overflow: hidden;
        transition: transform var(--transition-normal);
        padding: var(--space-md);
    }
    
    .merchandise-item img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: var(--radius-sm);
        transition: transform var(--transition-normal);
    }
    
    .merchandise-item:hover img {
        transform: scale(1.05);
    }
    
    .merchandise-item h3 {
        margin: var(--space-md) 0 var(--space-sm);
    }
    
    .description {
        margin-bottom: var(--space-sm);
    }
    
    .price {
        font-weight: bold;
        font-size: 1.1rem;
        margin-bottom: var(--space-md);
    }
    
    .buy-btn {
        display: inline-block;
        padding: var(--space-sm) var(--space-lg);
        background: var(--color-accent-primary);
        color: var(--color-text-primary);
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        transition: all var(--transition-normal);
        text-align: center;
    }
</style>